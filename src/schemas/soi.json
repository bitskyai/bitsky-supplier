{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://munew.io/schemas/soi.json",
  "type": "object",
  "title": "SOI Schema",
  "version": "1.0.0",
  "required": ["globalId", "name", "baseURL", "callback", "health"],
  "additionalProperties": false,
  "properties": {
    "system": {
      "type": "object",
      "description": "Following properties are updated by system, user cannot direct update them",
      "additionalProperties": false,
      "properties": {
        "state": {
          "$ref": "#/definitions/state"
        },
        "securityKey": {
          "$ref": "#/definitions/securityKey"
        },
        "created": {
          "$ref": "#/definitions/created"
        },
        "modified": {
          "$ref": "#/definitions/modified"
        },
        "version": {
          "$ref": "#/definitions/version"
        },
        "lastPing": {
          "allOf": [
            {
              "$ref": "#/definitions/timestamp"
            },
            {
              "title": "Last Ping Time",
              "description": "When last time check SOI health"
            }
          ]
        },
        "pingFailReason": {
          "type": "string",
          "description": "Why ping SOI fail, so user can know why it was fail"
        }
      }
    },
    "_id": {
      "$ref": "#/definitions/_id"
    },
    "globalId": {
      "title": "Global ID",
      "description": "globally unique identifier of this agent",
      "type": "string",
      "examples": ["59f43b55-46a3-4efc-a960-018bcca91f46"]
    },
    "name": {
      "$ref": "#/definitions/name"
    },
    "baseURL": {
      "allOf": [
        {
          "$ref": "#/definitions/url"
        },
        {
          "title": "Base URL",
          "description": "Base URL of SOI"
        }
      ]
    },
    "callback": {
      "type": "object",
      "description": "RESTFul API for where collected intelligences should send to",
      "required": ["method", "path"],
      "properties": {
        "method": {
          "allOf": [
            {
              "$ref": "#/definitions/method"
            },
            {
              "default": "POST"
            }
          ]
        },
        "path": {
          "allOf": [
            {
              "$ref": "#/definitions/path"
            },
            {
              "default": "/apis/intelligences"
            }
          ]
        }
      }
    },
    "health": {
      "type": "object",
      "description": "RESTFul API for check SOI's health status",
      "required": ["method", "path"],
      "properties": {
        "method": {
          "allOf": [
            {
              "$ref": "#/definitions/method"
            },
            {
              "default": "GET"
            }
          ]
        },
        "path": {
          "allOf": [
            {
              "$ref": "#/definitions/path"
            },
            {
              "default": "/apis/health"
            }
          ]
        }
      }
    }
  },
  "definitions": {
    "_id": {
      "title": "ID",
      "description": "identifier of this entity",
      "type": ["string", "object"]
    },
    "created": {
      "allOf": [
        {
          "$ref": "#/definitions/timestamp"
        },
        {
          "title": "Created at"
        }
      ]
    },
    "modified": {
      "allOf": [
        {
          "$ref": "#/definitions/timestamp"
        },
        {
          "title": "Last time modified at"
        }
      ]
    },
    "timestamp": {
      "type": ["integer", "null", "string"],
      "description": "Timestamp of when this intelligence was assigned to an agent",
      "examples": [1553974629109]
    },
    "version": {
      "title": "Version",
      "description": "version of this agent",
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0",
      "examples": ["1.0.0"]
    },
    "globalId": {
      "title": "Global ID",
      "description": "globally unique identifier, if you don't pass, then it will automatically generate one",
      "type": "string",
      "examples": ["59f43b55-46a3-4efc-a960-018bcca91f46"]
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Target URL for this intelligence.",
      "examples": ["https://json-schema.org"]
    },
    "name": {
      "title": "Name",
      "description": "Give a meaningful name",
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "examples": ["My Chrome Extension"]
    },
    "description": {
      "title": "Description",
      "description": "description of this agent",
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "examples": ["My chrome extension used for test purpose"]
    },
    "securityKey": {
      "title": "Security Key",
      "type": "string",
      "description": "Security key is used to identify different user"
    },
    "state": {
      "title": "State",
      "type": "string",
      "description": "State of this entity",
      "enum": ["ACTIVE", "FAILED"]
    },
    "method": {
      "type": "string",
      "title": "HTTP Request Method",
      "description": "HTTP Request Method",
      "enum": ["GET", "POST", "PUT", "DELETE"]
    },
    "path": {
      "type": "string",
      "title": "URL Path",
      "description": "RESTFul path"
    }
  }
}
